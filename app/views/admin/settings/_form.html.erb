<%= form_for [:admin, @setting] do |f| %>

 <p>
 	<%= f.label :site_name %> :	<%= f.text_field :site_name %>
 </p>
 <p>
 	<%= f.label :post_per_page %> : <%= f.number_field :post_per_page %>
 </p>
 <p>
 	<%= f.label :under_maintaenance %> : <%= f.check_box :under_maintaenance %>
 </p>
 <p>
 	<%= f.label :prevent_commenting %> : <%= f.select :prevent_commenting, [['Disable', false], ['Enable', true]] %>
 </p>
<p>
 	<%= f.label :tag_visibility %> : <%= f.select :tag_visibility, [['Enable', true], ['Disable', false]] %>
 </p>
 <p><%= f.submit %></p>

<% end %>